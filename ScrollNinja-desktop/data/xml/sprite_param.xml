<?xml version="1.0" encoding="utf-8"?>

<!-- スプライト関連のパラメータ -->
<SpriteParam>
	<!-- 忍者 -->
	<Ninja>
	</Ninja>
	
	<!-- 鉤縄 -->
	<Kaginawa>
		<!-- 鉤 -->
		<Anchor>
			<Sprite>
				<Texture>
					<FilePath>kaginawa_anchor.png</FilePath>
				</Texture>
				<OriginX>-16</OriginX>
			</Sprite>
		</Anchor>
		<!-- 縄 -->
		<Rope>
			<Sprite>
				<Texture>
					<FilePath>kaginawa_rope.png</FilePath>
				</Texture>
				<OriginX>-32</OriginX>
			</Sprite>
		</Rope>
	</Kaginawa>
	
	<!-- カンペ（コピペ用。ゲーム中では使わない） -->
	<CunningPaper>
		<Sprite>
			<!-- テクスチャのパラメータ -->
			<Texture>
				<!-- テクスチャのファイルパス（ディレクトリパスはglobal_param.xmlで指定する） -->
				<FilePath>hoge.png</FilePath>
				<!-- UVマップのX座標　単位：ピクセル　省略時：0 -->
				<X>0</X>
				<!-- UVマップのX座標　単位：ピクセル　省略時：0 -->
				<Y>0</Y>
				<!-- UVマップの横幅　単位：ピクセル　省略時：テクスチャの横幅 -->
				<Width>64</Width>
				<!-- UVマップの縦幅　単位：ピクセル　省略時：テクスチャの縦幅 -->
				<Height>64</Height>
			</Texture>
			<!-- スプライトの横幅　省略時：テクスチャに合わせる -->
			<Width>64.0</Width>
			<!-- スプライトの縦幅　省略時：テクスチャに合わせる -->
			<Height>64.0</Height>
			<!-- 中央となるX座標（0.0を指定するとど真ん中）　省略時：0.0 -->
			<OriginX>0.0</OriginX>
			<!-- 中央となるY座標（0.0を指定するとど真ん中）　省略時：0.0 -->
			<OriginY>0.0</OriginY>
		</Sprite>
	</CunningPaper>
</SpriteParam>

