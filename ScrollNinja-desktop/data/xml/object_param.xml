<?xml version="1.0" encoding="utf-8"?>

<!-- オブジェクトの固有パラメータ -->
<ObjectParam>
	<!-- 忍者 -->
	<Ninja>
		<!-- 走りの加速度 -->
		<RunAccel>5.0</RunAccel>
		<!-- 走りの最高速度（毎秒） -->
		<RunMaxVelocity>30.0</RunMaxVelocity>
		<!-- ダッシュの加速度 -->
		<DashAccel>10.0</DashAccel>
		<!-- 走りの最高速度（毎秒） -->
		<DashMaxVelocity>60.0</DashMaxVelocity>
		<!-- ジャンプ力 -->
		<JumpPower>70.0f</JumpPower>
		<!-- 空中でジャンプできる回数 -->
		<AerialJumpCount>1</AerialJumpCount>
	</Ninja>
	
	<!-- 鉤縄 -->
	<Kaginawa>
		<!-- 伸びる速度 -->
		<SlackVelocity>90.0</SlackVelocity>
		<!-- 縮む速度 -->
		<ShrinkVelocity>90.0</ShrinkVelocity>
		<!-- 鉤縄の長さ -->
		<Length>45.0</Length>
		<!-- 鉤縄を離す入力の際の判定用時間（秒） -->
		<ReleaseTime>0.2</ReleaseTime>
	</Kaginawa>
</ObjectParam>

